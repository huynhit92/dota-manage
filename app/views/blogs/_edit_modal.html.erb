<div class="modal fade full-modal" id="editBlogModal" tabindex="-1" role="dialog" aria-labelledby="editBlogModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="row">
          <div class="col-md-4">
            <h4 class="modal-title">
              タイトル：<input type="text" class="form-control" ng-model="blog.title"/>
            </h4>
          </div>
          <div class="col-md-4">
            <h4 class="modal-title">
              カテゴリ
              <select ng-options="k*1 as v for (k, v) in MASTERS.blog_categories" ng-model="blog.blog_category_id" class="form-control">
              </select>
            </h4>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <div class="alert alert-info fade in" role="alert" ng-show="success">{{ success }}</div>
        <div class="alert alert-block alert-danger fade in" role="alert" ng-show="errors.length > 0">
          <span ng-repeat="err in errors">
            {{ err }}<br/>
          </span>
        </div>
        <div class="row">
          <div class="col-md-6">
            <textarea class="form-control textarea" rows="50" ng-model="blog.content"></textarea>
          </div>
          <div class="col-md-6" style="overflow-x: scroll; max-height: 1000px; width: 50%" >
            <span ng-bind-html="converted"></span>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" ng-click="save(blog)">Save</button>
      </div>
    </div>
  </div>
</div>
