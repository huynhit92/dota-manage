<%= search_form_for @q, :url => heroes_path, :html => { :method => :get, :class => 'form-horizontal' } do |f| %>
  <section class="panel panel-default">
    <div class="panel-body">
      <div class="col-lg-6">
        <div class="form-group">
          <label class="col-lg-4 control-label"><%= Hero.human_attribute_name(:name) %></label>
          <div class="col-lg-8">
            <%= f.text_field :name_cont, { :class => "form-control" } %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label"><%= Hero.human_attribute_name(:position) %></label>
          <div class="col-lg-8">
            <%= f.select :position_eq, MASTERS[:hero_positions],{include_blank: "選択してください"}, { :class => "form-control" } %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-10 col-sm-10">
            <%= f.submit 'Search', :class => "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
