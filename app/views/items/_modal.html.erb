<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Item</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-info fade in" role="alert" ng-show="success">{{ success }}</div>
        <div class="alert alert-block alert-danger fade in" role="alert" ng-show="errors">
          <span ng-repeat="err in errors">
            {{ err }}<br/>
          </span>
        </div>
        <form role="form">
          <div class="form-group">
            <label><%= Item.human_attribute_name(:name) %></label>
            <input type="text" class="form-control" ng-model="item.name">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:required_level) %></label>
            <input type="text" class="form-control" ng-model="item.required_level">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:description) %></label>
            <textarea class="form-control" ng-model="item.description"></textarea>
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:made_of) %></label>
            <input type="text" class="form-control" ng-model="item.made_of">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:can_create) %></label>
            <input type="text" class="form-control" ng-model="item.can_create">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:hero_use) %></label>
            <input type="text" class="form-control" ng-model="item.hero_use">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:receive_method) %></label>
            <input type="text" class="form-control" ng-model="item.receive_method">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:quality) %></label>
            <input type="text" class="form-control" ng-model="item.quality">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:img_url) %></label>
            <input type="text" class="form-control" ng-model="item.img_url">
          </div>
          <div class="form-group">
            <label><%= Item.human_attribute_name(:item_type) %></label>
            <select ng-model="item.item_type" ng-options='k*1 as v for (k, v) in MASTERS["item_types"]' class="form-control">
              <option value="" selected>Please Select</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" ng-click="save(item)">Save</button>
      </div>
    </div>
  </div>
</div>